<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="horizontal"
	android:paddingTop="40dp"
	tools:context=".client.view.main.ServicesFragment">

	<GridLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="right"
		android:columnCount="1"
		android:rowCount="7"
		android:useDefaultMargins="true">

		<TextView
			android:id="@+id/textView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="Streaming Services"
			android:textColor="#FFFFFF"
			android:textSize="30sp" />

		<ImageView
			android:id="@+id/imageNetflix"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/netflix" />

		<ImageView
			android:id="@+id/imageHulu"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/hulu"
			android:visibility="visible"
			tools:visibility="visible" />

		<EditText
			android:id="@+id/password"
			android:layout_width="300dp"
			android:layout_height="35dp"
			android:layout_gravity="center"
			android:layout_marginTop="35dp"
			android:background="#373837"
			android:gravity="top|left"
			android:hint="  Search Service"
			android:inputType="textPersonName"
			android:textColor="#919994"
			android:textColorHint="#919994"
			android:textSize="24sp"></EditText>

		<Button
			android:id="@+id/AddServiceButton"
			android:layout_width="200dp"
			android:layout_height="100dp"
			android:layout_centerInParent="true"
			android:layout_gravity="center"
			android:layout_marginTop="20dp"
			android:background="#F10E0E"
			android:text="Add Service"
			android:textColor="#FFFBFB"
			android:textSize="20sp" />

	</GridLayout>


</LinearLayout>